@{
    Layout = "_LayoutAdmin";
}

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Add edit adv</div>
        <div class="panel-body">
            <form method="post" enctype="multipart/form-data" action="">
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Name</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.Name</text>}" name="Name" class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->

                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Position</div>
                    <div class="col-md-10">
                        <select name="Position" class="form-control" style="width:250px;">
                            <!option @if (Model != null && Model.Position == 1) { <text> selected</text> } value="1">Ảnh quảng cáo 1</!option>
                            <!option @if (Model != null && Model.Position == 2) { <text> selected</text> } value="2">Ảnh quảng cáo 2</!option>
                            <!option @if (Model != null && Model.Position == 3) { <text> selected</text> } value="3">Ảnh quảng cáo 3</!option>
                            <!option @if (Model != null && Model.Position == 4) { <text> selected</text> } value="4">Ảnh quảng cáo 4</!option>
                        </select>
                    </div>
                </div>
                <!-- end rows -->
                 <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Link cho quảng cáo</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.Href</text>}" name="Href"  class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Photo</div>
                    <div class="col-md-10">
                        <input type="file" name="Photo" />
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Process" class="btn btn-primary btn-sm">
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>