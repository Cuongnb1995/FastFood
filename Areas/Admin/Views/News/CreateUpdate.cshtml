@{
    Layout = "_LayoutAdmin";
}

@using FastFood.Models
@functions{
    public FoodDbContext db = new FoodDbContext();
}
<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Add edit news</div>
        <div class="panel-body">
            @* muon upload duoc file thi phai co thuoc tinh enctype=mulipart/form-data *@
            <form method="post" enctype="multipart/form-data" action="">
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Name</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.Name</text>}" name="Name" class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Photo</div>
                    <div class="col-md-10">
                        <input type="file" name="Photo" />
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Hot</div>
                    <div class="col-md-10">
                        <input type="checkbox" name="Hot" Id="Hot" @if (Model != null && Model.Hot == 1) { <text> checked </text> }> <label for="Hot">Tin nổi bật</label>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Description</div>
                    <div class="col-md-10">
                        <textarea name="Description">@if (Model != null) {<text>@Model.Description</text>}</textarea>
                        <script language="javascript">
                            CKEDITOR.replace("Description");
                        </script>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Content</div>
                    <div class="col-md-10">
                        <textarea name="Content">@if (Model != null) {<text>@Model.Content</text>}</textarea>
                        <script language="javascript">
                            CKEDITOR.replace("Content");
                        </script>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Process" class="btn btn-primary">
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>